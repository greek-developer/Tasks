<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <Version>0.1.2</Version>
  </PropertyGroup>
  
  <PropertyGroup>  
    <OutputType>Exe</OutputType>
    <TargetFramework>net9.0</TargetFramework>
    <RootNamespace>Tasks</RootNamespace>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>    
    <PackageOutputPath>../../nupkg</PackageOutputPath>
    <PackAsTool>true</PackAsTool>
  </PropertyGroup>

  <PropertyGroup>    
    <ToolCommandName>tasks</ToolCommandName>    
    <PackageId>grdev.tasks</PackageId>    
    <Authors>Thomas Sarmis (thomas.sarmis@gmail.com), GRDEV</Authors>
    <Description>Task Management CLI</Description>    
    <RepositoryUrl>https://github.com/greek-developer/tasks</RepositoryUrl>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageProjectUrl>https://greekdeveloper.com/projects/tasks</PackageProjectUrl>
    <PackageReadmeFile>README.md</PackageReadmeFile>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="System.CommandLine" Version="2.0.0-rc.1.25451.107" />
  </ItemGroup>

  <ItemGroup>        
    <None Include="..\..\README.md" Pack="true" PackagePath="\"/>        
  </ItemGroup>

</Project>
